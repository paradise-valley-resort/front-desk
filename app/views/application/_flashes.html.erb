<% if flash.any? %>
  <div class="flashes">
    <% user_facing_flashes.each do |key, value| -%>
      <div class="alert alert-<%= key %> alert-dismissable">
        <button class="close"
          data-dismiss="alert"
          type="button">
            <span>&times;</span>
          </button>
        <%= value %>
      </div>
    <% end -%>
  </div>
<% end %>
