<li class="table-list-item rental-list-item" id="rental_<%= rental.to_param %>">
  <div class="row">
    <div class="col-xs-4 table-list-cell">
      <span><%= rental.name %></span>
    </div>
    <div class="col-xs-4 table-list-cell">
      <span><%= rental.description %></span>
    </div>
    <div class="col-xs-2 table-list-cell">
      <% if rental.deactive? %>
        <span class="text-muted">Deactivated</span>
      <% else %>
        <span>&nbsp;</span>
      <% end %>
    </div>
    <div class="col-xs-1 table-list-cell">
      <span>&nbsp;</span>
    </div>
    <div class="col-xs-1 table-list-cell actions">
      <div class="btn-group">
        <button class="btn btn-default dropdown-toggle manage-rental"
          data-toggle="dropdown"
          type="button">
          <%= fa_icon "cog" %>
          <%= fa_icon "caret-down" %>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit rental", edit_admin_rental_path(rental) %></li>
          <% if rental.active? %>
            <li>
              <%= button_to "Deactivate rental",
                admin_rental_deactivations_path(rental),
                class: "btn-link btn-danger",
                data: { confirm: "Are you sure you want to deactivate this rental?" }
              %>
            </li>
          <% else %>
            <li>
              <%= button_to "Reactivate rental",
                admin_rental_reactivations_path(rental),
                class: "btn-link"
              %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</li>
