<%= simple_form_for([:admin, @rental]) do |f| %>
  <%= error_notification(f) %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :description, input_html: { rows: 5 } %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :accommodates, collection: 0..10, required: true %>
      </div>
      <div class="col-xs-6">
        <%= f.input :bathrooms, collection: 0..5, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :bedrooms, collection: 0..5, required: true %>
      </div>
      <div class="col-xs-6">
        <%= f.input :beds, collection: 0..5, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :air_conditioning %>
        <%= f.input :heating %>
        <%= f.input :internet %>
        <%= f.input :refrigerator %>
      </div>
      <div class="col-xs-6">
        <%= f.input :shower %>
        <%= f.input :stove %>
        <%= f.input :toilet %>
        <%= f.input :tv %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn-success pull-right" %>
    <%= link_to "Cancel", :back, class: "btn btn-default pull-right" %>
  </div>
<% end %>
